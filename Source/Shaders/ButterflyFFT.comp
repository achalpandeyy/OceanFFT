		imageStore(u_pingpong0, pixel_pos, vec4(result.real, result.im, 0.f, 1.f));
	}
}

void main()
{
	ivec2 pixel_pos = ivec2(gl_GlobalInvocationID.xy);
	if (u_fft_direction == 0) HorizontalButterflies(pixel_pos);
	else if (u_fft_direction == 1) VerticalButterfiles(pixel_pos);
}